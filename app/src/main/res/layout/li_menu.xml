<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/li_menu_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_xlarge"
    android:paddingLeft="@dimen/padding_xlarge"
    android:paddingRight="@dimen/padding_xlarge"
    android:paddingTop="@dimen/padding_xlarge">

    <ImageView
        android:id="@+id/li_menu_iv_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/padding_middle"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/li_menu_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="start"
        android:singleLine="true"
        android:text="Placeholder"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/li_menu_tv_badge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/bg_badge"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="visible"/>
</LinearLayout>