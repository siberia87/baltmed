<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fitsSystemWindows">true</item>

        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BaltMed.ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="BaltMed.TextAppearance.Small" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="BaltMed.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaltMed.TextAppearance.Normal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="BaltMed.TextAppearance.Large" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaltMed.TextAppearance.Huge" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="BaltMed.TextAppearance.Label" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaltMed.TextAppearance.Action" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BaltMed.TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaltMed.TextAppearance.Hint" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="BaltMed"/>

    <style name="BaltMed.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingLeft">@dimen/padding_middle</item>
        <item name="android:paddingRight">@dimen/padding_middle</item>
    </style>

    <style name="BaltMed.TextView.Label">
        <item name="android:textAppearance">@style/BaltMed.TextAppearance.Label</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaltMed.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding_xlarge</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">@drawable/bg_stated_edit</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="BaltMed.EditText.Field">
        <item name="android:lines">4</item>
        <item name="android:maxLines">20</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="BaltMed.Button" parent="Widget.AppCompat.Button">

        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/padding_xxlarge</item>
        <item name="android:paddingRight">@dimen/padding_xxlarge</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>
